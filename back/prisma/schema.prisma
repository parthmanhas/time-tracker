generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Timer {
  id            String      @id @unique // Primary key
  createdAt     DateTime // Date of the timer
  completedAt   DateTime    @default(now())// @default(now()) not working setting from node
  remainingTime Int // Time left in seconds or milliseconds, depending on your preference
  duration      Int
  status        TimerStatus // Status of the timer
  title         String
}

// Enum for status values
enum TimerStatus {
  ACTIVE
  PAUSED
  COMPLETED
}

